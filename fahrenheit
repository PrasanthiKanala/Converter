<script type="text/javascript">

function fConv(valNum){
	
	document.getElementById("c").innerHTML= ((valNum*(1)-32)*(5/9))+"&degC";
	document.getElementById("k").innerHTML= (((valNum*(1)-32)*(5/9))+273.15)+"K";
}
</script>
<form>
<div><h1 align='center'>Fahrenheit Converter</h1><br/><br/>
<p><label id="L1">Fahrenheit:</label>
<input class="placeholder" id="inputFeet" type="number" placeholder="Fahrenheit" oninput="fConv(this.value)">
</p>
<p>Celsius:  <span id="c"></span></p>
<p>Kelvin: <span id="k"></span></p>
