<script type="text/javascript">

function kConv(valNum){
	
	document.getElementById("c").innerHTML= (valNum*(1)-273.15)+"&degC";
	document.getElementById("f").innerHTML= (((valNum*(1)-273.15)*(9/5))+32)+"&degF";
}
</script>
<form>
<div><h1 align='center'>Kelvin Converter</h1><br/><br/>
<p><label id="L1">Kelvin:</label>
<input class="placeholder" id="inputFeet" type="number" placeholder="Kelvin" oninput="kConv(this.value)">
</p>
<p>Celsius:  <span id="c"></span></p>
<p>Fahrenheit: <span id="f"></span></p>
